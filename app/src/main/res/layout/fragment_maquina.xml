<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaquinaFragment"
    android:background="@color/fondo">


    <ImageView
        android:id="@+id/papelMaquina"
        android:layout_width="102dp"
        android:layout_height="94dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="210dp"
        android:visibility="invisible"
        android:src="@drawable/papel_higienico" />

    <ImageView
        android:id="@+id/tijerasMaquina"
        android:layout_width="102dp"
        android:layout_height="94dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="210dp"
        android:visibility="invisible"
        android:src="@drawable/tijeras" />

    <ImageView
        android:id="@+id/piedraMaquina"
        android:layout_width="102dp"
        android:layout_height="94dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="210dp"
        android:src="@drawable/piedra"
        android:visibility="invisible" />


</FrameLayout>