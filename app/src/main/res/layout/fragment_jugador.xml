<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JugadorFragment"
    android:background="@color/fondo">

    <TextView
        android:id="@+id/textito"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Elija:"
        android:textSize="48sp" />



    <ImageView
        android:id="@+id/papelJugador"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="120dp"
        android:clickable="true"
        android:src="@drawable/papel_higienico" />

    <ImageView
        android:id="@+id/tijerasJugador"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="120dp"
        android:clickable="true"
        android:src="@drawable/tijeras" />

    <ImageView
        android:id="@+id/piedraJugador"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:layout_marginTop="120dp"
        android:layout_marginStart="245dp"
        android:src="@drawable/piedra" />



</FrameLayout>